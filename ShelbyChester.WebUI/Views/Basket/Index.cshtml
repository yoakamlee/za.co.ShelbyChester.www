@model IEnumerable<ShelbyChester.Core.ViewModels.BasketItemViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageWithTheme.cshtml";
}
<div class="w3l-middle py-5" style="text-align:left">
    <div class="container py-xl-5 py-lg-3">
        <div class="welcome-left py-md-5 py-3">
            <h6></h6>
            <h4>Basket</h4>
            <p class="pr-lg-5">
                Check out, and confirm your order!
            </p>
            <div class="buttons mt-5">
                <a></a>
                <a></a>
            </div>
        </div>
    </div>
</div>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table" style="padding-top: 25px; padding-left: 30px; padding-right: 30px; padding-bottom:50px">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.ContainerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ContainerPrice)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Image)*@
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr style="padding-top: 25px; padding-left: 30px; padding-right: 30px; padding-bottom:50px">
    <td>
        <img class="img" src="~/Content/ContainerType/@item.Image"
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ContainerName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>

    <td>
        @String.Format("{0:c}", item.ContainerPrice)
    </td>
        @String.Format("{0:c}", item.ContainerPrice * item.Quantity)
<td>
    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
    @*<a href="@Url.Action("Create","ContainerRentManager", new {Id = item.Id})" class="btn btn" style="color:greenyellow">Confirm</a>*@
    <a href="@Url.Action("RemoveFromBasket","Basket", new {Id = item.Id})" class="btn btn-danger">Cancel</a>
</td>
</tr>
}
    <tr>
        <td colspan="4"style="text-align:right">
            <strong>Basket Total</strong>
        </td>
        <td>@String.Format("{0:c}", (from c in Model select c.ContainerPrice * c.Quantity).Sum())</td>
        <td><a href="@Url.Action("Checkout","Basket")" class="btn btn" style="color:white; background-color:greenyellow">Check Out</a></td>
    </tr>
</table>
